import java.util.*;
class cal
{
	public static void main(String args[])
	{
		System.out.println("1.Addition\n 2.Subtraction\n3.Multiplication\4.Division\n5.Remainder");
		System.out.println("Enter Value");
		Scanner sc=new Scanner(System.in);
		int value=sc.nextInt();
		System.out.println("Enter two Value");
		int a=sc.nextInt();
		int b=sc.nextInt();		
		switch(value)
		{

			case 1:
				int addition=a+b;
				System.out.println("Sum of" +a +"and" +b +"is"+ addition);
			break;
			case 2:
				int subtraction=a-b;
				System.out.println("Subtraction of" +a+" and "+b+" is "+subtraction);
			break;
			case 3:int Multiplication=a*b;
			System.out.println("Enter two Value");
			System.out.println("Subtraction of" +a+" and "+b+" is "+Multiplication);
			break;
			default:
				System.out.println("Invalid input");
		}
	}
}
